@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
<div class="content">
  <h2>Add a Machine</h2>

  <h4>Assign a machine to this engineer: @Html.DisplayFor(model => model.Name)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.EngineerId)

    @Html.Label("Select Machine")
    @Html.DropDownList("MachineId")
    <br>
    <input type="submit" value="Save" class="btn btn-primary" />
  }
  <hr />
  <p>@Html.ActionLink("Back to Engineer List", "Index")</p>
</div>