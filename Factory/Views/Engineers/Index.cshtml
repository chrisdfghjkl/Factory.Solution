@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="content">
  <h3>Engineers on staff:</h3>

  @if (@Model.Count == 0)
  {
    <h5>No engineers have been added</h5>
  } 

  <ul>
    @foreach(Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
    }
  </ul>
  <hr />
  <p>@Html.ActionLink("Add Engineer", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>