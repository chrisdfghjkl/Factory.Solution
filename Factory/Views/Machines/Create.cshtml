@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="content">
  <h3>Add Machine</h3>

  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @style = "width:250px;" })
    <br>
    @Html.LabelFor(model => model.Description)
    <br>
    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @style = "width:500px;" })
    <br>
    @Html.Label("Assign engineer")
    @Html.DropDownList("EngineerId")
    <br>
    <input type="submit" value="Add Machine" class="btn btn-primary" />
  }
  <hr />
  <p>@Html.ActionLink("Back to Machine List", "Index")</p>
</div>