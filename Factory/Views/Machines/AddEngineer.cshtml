@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class="content">
  <h3>Add an Engineer</h3>

  <h5>Assign an engineer to this machine: @Html.DisplayFor(model => model.Name)</h5>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select Engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" class="btn btn-primary" />
  }
  </hr>
  <p>@Html.ActionLink("Back to Machine List", "Index")</p>
</div>